<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Add Blog</title>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <h3 class="text-center mb-4">Create a New Blog</h3>
          <%= error ? `
          <div class="alert alert-danger">${error}</div>
          ` : '' %>

          <form action="/addblogs" method="POST" enctype="multipart/form-data">
            <!--Cover Image Upload -->
            <div class="mb-3">
              <label for="blogImage" class="form-label"
                >Upload Blog Image (optional)</label
              >
              <input
                class="form-control"
                type="file"
                id="blogImage"
                name="blogImage"
                accept="image/*"
              />
            </div>

            <!-- Title -->
            <div class="mb-3">
              <label for="title" class="form-label">Blog Title</label>
              <input
                type="text"
                class="form-control"
                id="title"
                name="title"
                value="<%= blog ? blog.title : '' %>"
                required
              />
            </div>

            <!-- Category -->
            <div class="mb-3">
              <label for="category" class="form-label"
                >Category(optional)</label
              >
              <input
                type="text"
                class="form-control"
                id="category"
                name="category"
                value="<%= blog ? blog.category : '' %>"
              />
            </div>

            <!-- Content -->
            <div class="mb-3">
              <label for="content" class="form-label">Content</label>
              <textarea
                class="form-control"
                id="content"
                name="content"
                rows="6"
                required
              >
                 <%= blog ? blog.content : '' %>
              </textarea>
            </div>

            <!-- Submit Button -->
            <div class="d-grid">
              <button type="submit" class="btn btn-primary">
                Publish Blog
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <%- include('./partials/script') %>
  </body>
</html>
