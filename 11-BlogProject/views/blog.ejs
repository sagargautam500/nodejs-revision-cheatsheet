<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title><%= blog.title %> | Blog Details</title>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <!-- Blog Details Section -->
    <section class="container my-5">
      <div class="row justify-content-center">
        <div class="col-lg-10">
          <!-- Title and Category -->
          <h1 class="mb-3 fw-bold text-primary"><%= blog.title %></h1>
          <p class="text-muted mb-4">Category: <%= blog.category %></p>

          <!-- Blog Image -->
          <% if (blog.blogImageUrl) { %>
          <img
            src="<%= blog.blogImageUrl %>"
            alt="<%= blog.title %>"
            class="img-fluid rounded mb-4"
            style="max-height: 500px; object-fit: cover; width: 100%"
          />
          <% } %>

          <!-- Blog Content -->
          <div class="blog-content fs-5 lh-lg mb-5"><%= blog.content %></div>

          <!-- Author Info -->
          <div class="d-flex align-items-center gap-3 mb-4 border-top pt-3">
            <img
              src="<%= blog.createdBy.profileImageUrl %>"
              alt="Author"
              class="rounded-circle"
              style="width: 50px; height: 50px; object-fit: cover"
            />
            <div>
              <h6 class="mb-0"><%= blog.createdBy.fullName %></h6>
              <small class="text-muted">Author</small>
            </div>
          </div>
        </div>
      </div>
    </section>

    <%- include('./partials/script') %>
  </body>
</html>
